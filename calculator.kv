<CalculatorLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: 20

    TextInput:
        id: display
        text: '0'
        font_size: 40
        size_hint_y: 0.3
        multiline: False
        readonly: True

    GridLayout:
        cols: 4
        rows: 5
        spacing: 5

    Button:
        text: '7'
        on_press: app.root.digit_button('7')
    Button:
        text: '8'
        on_press: app.root.digit_button('8')
    Button:
        text: '9'
        on_press: app.root.digit_button('9')
    Button:
        text: '/'
        on_press: app.root.operation_button('/')

    Button:
        text: '4'
        on_press: app.root.digit_button('4')
    Button:
        text: '5'
        on_press: app.root.digit_button('5')
    Button:
        text: '6'
        on_press: app.root.digit_button('6')
    Button:
        text: '*'
        on_press: app.root.operation_button('*')

    Button:
        text: '1'
        on_press: app.root.digit_button('1')
    Button:
        text: '2'
        on_press: app.root.digit_button('2')
    Button:
        text: '3'
        on_press: app.root.digit_button('3')
    Button:
        text: '-'
        on_press: app.root.operation_button('-')

    Button:
        text: '0'
        on_press: app.root.digit_button('0')
    Button:
        text: '.'
        on_press: app.root.decimal_button()
    Button:
        text: 'C'
        on_press: app.root.clear_button()
    Button:
        text: '+'
        on_press: app.root.operation_button('+')

    Button:
        text: '='
        on_press: app.root.equals_button()
        size_hint_x: None
        width: self.parent.width